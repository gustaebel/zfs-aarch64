_zfs_version="0.7.6"
_kernel_version="4.15.6-1"

pkgname="zfs-aarch64"
pkgver=${_zfs_version}
pkgrel=1
license=('GPL')
pkgdesc="Solaris Porting Layer kernel modules and utils."
depends=("spl-aarch64" "linux-aarch64=${_kernel_version}")
makedepends=("git" "linux-aarch64-headers=${_kernel_version}")
arch=("aarch64")
url="http://zfsonlinux.org/"
source=(
    "git+https://github.com/zfsonlinux/zfs.git#tag=zfs-${_zfs_version}"
    zfs.conf
)
md5sums=(
    'SKIP'
    'SKIP'
)
install=zfs.install

prepare() {
    sed -i "s/_KV_=.*/_KV_=${_kernel_version}/" ${startdir}/zfs.install
}

build() {
    cd "${srcdir}/zfs"
    ./autogen.sh

    unset LDFLAGS
    ./configure --prefix=/usr \
                --sysconfdir=/etc \
                --sbindir=/usr/bin \
                --with-mounthelperdir=/usr/bin \
                --libdir=/usr/lib \
                --datadir=/usr/share \
                --includedir=/usr/include \
                --with-udevdir=/lib/udev \
                --libexecdir=/usr/lib/zfs \
                --with-linux=/usr/lib/modules/${_kernel_version}-ARCH/build

    make
}

package() {
    cd "${srcdir}/zfs"
    make DESTDIR="${pkgdir}" install

    cp -r "$pkgdir"/{lib,usr}
    rm -r "$pkgdir"/lib

    sed -i "s+${srcdir}++" ${pkgdir}/usr/src/zfs-*/${_kernel_version}-ARCH/Module.symvers

    install -D -t ${pkgdir}/etc/modprobe.d ../zfs.conf
}
